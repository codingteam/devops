server {
    listen 443 ssl http2;
    server_name tales.codingteam.org.ru;
    keepalive_timeout 60;
    include /etc/nginx/ssl.conf;

    location / {
        alias /opt/codingteam/tales/;
        index index.html;
    }
}

server {
    listen 80;
    server_name tales.codingteam.org.ru;

    location / {
         rewrite ^(.*)$ https://tales.codingteam.org.ru$1 permanent;
    }
}
